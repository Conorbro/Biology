
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="779dp"
	    android:background="#177246"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MainActivity" >

	    <TextView
	        android:id="@+id/QuestionNumberView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/bheart"
	        android:layout_below="@+id/bheart"
	        android:text="TextView"
	        android:textColor="#FFFFFF" />

	    <TextView
	        android:id="@+id/QuestionTextView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="13dp"
	        android:textSize="28sp"
	        android:text="TextView"
	        android:textColor="#FFFFFF" />

	    <Button
	        android:id="@+id/bheart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/radioGroup1"
	        android:layout_below="@+id/radioGroup1"
	        android:layout_marginTop="14dp"
	        android:text="Show Next Question"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:id="@+id/ivface"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/AnswerDisplay"
	        android:layout_alignRight="@+id/QuestionNumberView"
	        android:layout_alignTop="@+id/bheart"
	        android:layout_marginRight="25dp"
	        android:src="@drawable/face2" />

	    <TextView
	        android:id="@+id/AnswerDisplay"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/QuestionNumberView"
	        android:layout_marginTop="22dp"
	        android:text="TextView"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:id="@+id/ivface2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/AnswerDisplay"
	        android:layout_marginTop="31dp"
	        android:src="@drawable/food" />

	    <RadioGroup
	        android:id="@+id/radioGroup1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/QuestionTextView"
	        android:layout_below="@+id/QuestionTextView"
	        android:layout_marginTop="15dp"
	        android:layout_weight="0.04"
	        android:textColor="#FFFFFF" >

	        <RadioButton
	            android:id="@+id/radioButton4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="RadioButton"
	            android:textColor="#FFFFFF" />

	        <RadioButton
	            android:id="@+id/radioButton1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="36dp"
	            android:text="RadioButton"
	            android:textColor="#FFFFFF" />

	        <RadioButton
	            android:id="@+id/radioButton2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="28dp"
	            android:text="RadioButton"
	            android:textColor="#FFFFFF" />

	        <RadioButton
	            android:id="@+id/radioButton3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="29dp"
	            android:text="RadioButton"
	            android:textColor="#FFFFFF" />
	    </RadioGroup>

	</RelativeLayout>

</ScrollView>
